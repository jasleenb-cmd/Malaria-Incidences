import matplotlib.pyplot as plt
import csv
# DATA SOURCE: https://data.worldbank.org/indicator/SH.MLR.INCD.P3

x = []
y = []

with open('Incidence of malaria (per 1,000 population at risk) by country.csv',
          'r') as csvfile:
    plots = csv.reader(csvfile, delimiter=',')

    for row in plots:
        x.append(row[1])
        y.append(float(row[2]))

plt.bar(x, y, color='g', width=0.72, label="Cases of Malaria")
plt.xticks(rotation=90, fontsize=5)
plt.xlabel('Countries')
plt.ylabel('Incidence of malaria (per 1,000 population at risk)')
plt.title('Incidence of malaria by Country 2000')
plt.legend()
plt.show()


